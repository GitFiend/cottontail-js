{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment",
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true
  },
  "include": [
    "src",
    "test",
    "globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "target~~",
    "output-code"
  ],
  "compileOnSave": false
}
